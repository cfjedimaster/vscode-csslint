{
	"name": "csslint",
	"displayName": "CSSLint",
	"description": "CSSLint extension",
	"author": "Raymond Camden",
	"license": "MIT",
	"version": "0.0.8",
	"icon": "icon.png",
	"publisher": "raymondcamden",
	"repository": {
		"type": "git",
		"url": "https://github.com/cfjedimaster/vscode-csslint"
	},
	"engines": {
		"vscode": "^1.16.0"
	},
	"categories": [
		"Linters"
	],
	"activationEvents": [
		"onLanguage:css"
	],
	"main": "./out/src/extension",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "CSSLint Extension",
			"properties": {
				"cssLanguageClient.clearProblemsOnDocumentClose": {
					"type": "boolean",
					"default": false,
					"description": "Clears problems (linter warnings/errors) for a document when it is closed."
				},
				"cssLanguageClient.maxNumberOfProblems": {
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "tsc -p ./",
		"compile": "tsc -w -p ./",
		"update-vscode": "node ./node_modules/vscode/bin/install",
		"postinstall": "node ./node_modules/vscode/bin/install"
	},
	"dependencies": {
		"vscode": "^1.1.5",
		"vscode-languageclient": "^3.5.0"
	}
}
