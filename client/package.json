{
	"name": "CSSLint",
	"description": "CSSLint extension",
	"author": "Raymond Camden",
	"license": "MIT",
	"version": "0.0.3",
	"icon": "icon.png",
	"publisher": "raymondcamden",
	"engines": {
		"vscode": "^1.8.0"
	},
	"categories": [
		"Linters"
	],
	"activationEvents": [
		"onLanguage:css"
	],
	"main": "./out/src/extension",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Max Number of Problems",
			"properties": {
        "cssLanguageClient.clearProblemsOnDocumentClose": {
					"type": "boolean",
					"default": false,
					"description": "Clears problems (linter warnings/errors) for a document when it is closed."
				},
				"cssLanguageClient.maxNumberOfProblems": {
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "tsc -p ./",
		"compile": "tsc -watch -p ./",
		"update-vscode": "node ./node_modules/vscode/bin/install",
		"postinstall": "node ./node_modules/vscode/bin/install"
	},
	"devDependencies": {
		"@types/mocha": "^2.2.33",
		"@types/node": "^6.0.52",
		"typescript": "^2.1.5",
		"vscode": "^1.0.3"
	},
	"dependencies": {
		"vscode-languageclient": "^3.1.0"
	}
}
